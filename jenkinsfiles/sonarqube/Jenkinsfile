pipeline {
	agent any
	environment {
    	SQ_TOKEN = credentials('aem-sonarqube-token')
    }
    parameters {
    	string(name: 'branch', defaultValue: 'master')
    }
	stages {
		stage('Clone sources') {
			steps {
					url: 'https://github.com/urvashiarora/aem-poc.git',
					branch: params.branch
			}
		}
		stage('Sonarqube') {
			steps {
				sh "./gradlew -S -i clean sonarqube -Dsonar.login=${SQ_TOKEN}"
			}
		}
	}
}
